<h1>New result</h1>

<% form_for(@result) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :id_track %><br />
    	<select name="result[id_track]">
	   	<% @tracks.each do |trck| %>
	       <option value="<%= trck.id %>" <%= (trck.id == @track.id)?"selected":"" %>>
	         <%= trck.name %>
	       </option>
	   	<% end %>
	  	</select>
  </p>
  <p>
    <%= f.label :is_pp %><br />
    <%= f.check_box :is_pp %>
  </p>
  <p>
    <%= f.label :id_pilot %><br />
		<select name="result[id_pilot]">
			<option value="0" selected>Select Pilot 1</option>
	   	<% @pilots.each do |pilot| %>
	       <option value="<%= pilot.id %>">
	         <%= pilot.fname[0,1] %> <%= pilot.lname %>
	       </option>
	   	<% end %>
	  	</select>
  </p>
  <p>
    <%= f.label :score %><br />
    <%= f.text_field :score %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', results_path %>